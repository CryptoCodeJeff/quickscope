---
import CA from '@/components/CA.svelte'
import Svg from '@/components/essentials/Svg.svelte'
import Layout from '@/layouts/Layout.astro'
import Button from '@/components/essentials/Button.svelte'
---

<style lang="scss">
  @use 'src/sass/mixins.scss' as *;

  .video-background {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100vh;
    object-fit: cover;
    z-index: -1;
  }

  .titles {
    position: absolute;
    left: 0;
    right: 0;
    margin: auto;
    bottom: 50px;
    h1 {
      text-align: center;
      font-size: 80px;

      @include notDesktop {
        font-size: 50px;
      }
    }

    h2 {
      text-align: center;
      font-size: 40px;
      color: rgb(255, 221, 176);

      @include notDesktop {
        font-size: 20px;
      }
    }
  }

  .interactions {
    position: fixed;
    display: flex;
    flex-direction: column;
    gap: 30px;
    width: 100%;
    margin-top: 300px;
    margin-left: 9%;

    @include notDesktop {
      margin-left: 0;
      padding: 10px;
    }
  }
</style>

<Layout title="$Quickscope on Solana">
  <div class="titles">
    <h1 reveal><span style="font-size: 50px;">$</span>QUICKSCOPE CTO</h1>
    <h2 reveal="0.6">Quick Scoping Jeets off the Solana Blockchain</h2>
    <CA client:load />
  </div>

  <div class="interactions">
    <Button icon="telegram" text="Telegram" href="https://t.me/quickscope_on_sol" />

    <Button icon="twitter" text="Twitter Community" href="https://x.com/i/communities/1876648968085479634" />
  </div>

  <video class="video-background" autoplay muted loop>
    <source src="video.mp4" type="video/mp4" />
  </video>
</Layout>

<script>
  import { animReveal } from '@/utils/reveal'

  window.onload = () => {
    setTimeout(() => {
      animReveal()
    }, 200)
  }
</script>
